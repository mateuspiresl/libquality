{
  "name": "libquality-api",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc && yarn lint",
    "debug": "yarn build && yarn watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "start": "node ./dist/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "test:unit": "yarn test .unit",
    "test:integration": "yarn test .int",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"tsc -w\" \"nodemon dist/server.js\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"tsc -w\" \"nodemon --inspect dist/server.js\""
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build && yarn test:unit"
    }
  },
  "_moduleAliases": {
    "~": "dist"
  },
  "nodemonConfig": {
    "ext": "js, yml"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/joi": "^17.1.1",
    "@octokit/core": "^3.1.4",
    "body-parser": "1.19.0",
    "command-line-args": "^5.1.1",
    "compression": "^1.7.4",
    "connect": "^3.7.0",
    "cors": "2.8.5",
    "cross-env": "7.0.0",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.2.1",
    "lusca": "^1.6.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.10.10",
    "morgan": "1.9.1",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "typedi": "^0.8.0",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/concurrently": "^4.1.0",
    "@types/cors": "^2.8.8",
    "@types/eslint": "^6.1.1",
    "@types/express": "4.17.1",
    "@types/express-serve-static-core": "^4.17.9",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^24.0.23",
    "@types/lusca": "^1.6.1",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.2",
    "@types/node": "^14.0.22",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "chai": "4.2.0",
    "concurrently": "^5.0.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "4.2.3",
    "jest": "^24.9.0",
    "lint-staged": "10.0.7",
    "nodemon": "^1.19.2",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typedoc": "0.16.10",
    "typescript": "^3.8.2",
    "typescript-formatter": "7.2.2"
  }
}
